{
  "manifest_version": 2,
  "name": "Document Question Answering",
  "version": "1.0",
  "description": "Upload documents and autofill forms using a local LLM model",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["bundle.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
